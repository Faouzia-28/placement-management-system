# ========== Database Configuration ==========
# PostgreSQL connection string
# Format: postgres://username:password@host:port/database
DATABASE_URL=postgresql://postgres:12345@localhost:5432/placement

# ========== Redis Configuration ==========
# Redis URL for job queue and background workers
# Format: redis://host:port or redis://password@host:port
REDIS_URL=redis://127.0.0.1:6379

# ========== JWT & Security ==========
# JWT secret for token signing (change in production!)
JWT_SECRET=your_jwt_secret_key_change_in_production

# ========== Server Configuration ==========
# Port the Express server listens on
PORT=5000

# Node environment (development, production, testing)
NODE_ENV=development

# ========== Scheduler Configuration ==========
# Cron interval for refreshing materialized views
# Format: minute hour day_of_month month day_of_week
# Example: "0 * * * *" = every hour at minute 0
MATERIALIZED_VIEW_REFRESH_INTERVAL=0 * * * *

# ========== Optional: File Upload Configuration ==========
# Maximum file upload size in bytes (default: 10MB)
MAX_UPLOAD_SIZE=10485760

# Upload directory for PDFs and exports
UPLOAD_DIR=./uploads
